@{
    Department dept = (Department)ViewBag.CurrentDepartment;
}

<dl class="col-6 row">
    <dt class="col-2">@Html.DisplayNameFor(d => dept.Id)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.Id)</dd>

    <dt class="col-2">@Html.DisplayNameFor(d => dept.Name)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.Name)</dd>

    <dt class="col-2">@Html.DisplayNameFor(d => dept.Description)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.Description)</dd>

    <dt class="col-2">@Html.DisplayNameFor(d => dept.AnnualBudget)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.AnnualBudget)</dd>

    <dt class="col-2">@Html.DisplayNameFor(d => dept.StartDate)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.StartDate)</dd>

    <dt class="col-2">@Html.DisplayNameFor(d => dept.IsActive)</dt>
    <dd class="col-10">@Html.DisplayFor(d => dept.IsActive)</dd>
</dl>


@if (dept.Employees.Count() > 0 && dept.Employees != null)
{
    <ul class="list-group col-4">
        <li class="list-group-item active">Employees</li>
        @foreach (var item in dept.Employees)
        {
            <a asp-controller="Employees" asp-action="GetDetailsView" asp-route-id="@item.Id" style="text-decoration:none">
                <li class="list-group-item list-group-item-action">@item.FullName (@item.Position)</li>
            </a>
        }
    </ul>
}
else
{
    <h1 class="alert alert-danger">There is no employee</h1>
}
