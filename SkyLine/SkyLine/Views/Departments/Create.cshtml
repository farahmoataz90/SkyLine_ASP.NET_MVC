@model Department
<h1 class="alert alert-success text-center">Create Department</h1>

<div class="row">
    <form class="col-4" method="post" asp-controller="Departments" asp-action="AddNew" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="AnnualBudget"></label>
            <input type="number" asp-for="AnnualBudget" class="form-control" />
            <span asp-validation-for="AnnualBudget" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="IsActive"></label>
            <input asp-for="IsActive" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Add</button>
    </form>

</div>

<a asp-controller="Departments" asp-action="GetIndexView">Back to List</a>

